{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "techn-eng",
  "version": "0.1.0",
  "identifier": "com.muzig.techneng.dev",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "techn-eng",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "iOS": {
      "developmentTeam": "M749NN6Z2N",
      "infoPlist": {
        "NSLocalNetworkUsageDescription": "We need to access local network to connect to the development server for debugging."
      }
    }
  }
}